source=(
		'archcraft-hook-i3wm.hook'
		'archcraft-hook-nm.hook'
		'archcraft-hook-openbox.hook'
		'archcraft-hook-thunar.hook'
		'archcraft-hook-xfce-notifyd.hook'
		'archcraft-hooks-extra'
)
